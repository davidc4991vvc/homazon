{{#if error}}
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
      {{error}}
    </div>
{{/if}}
<form method="POST" style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
    <h3>Register</h3>
    <div class="form-group">
        <label>Phone number</label>
        <input type="text" name="username" value="{{data.username}}" class="form-control">
    </div>
    <div class="form-group">
        <label>Email address</label>
        <input type="text" name="email" value="{{data.email}}" class="form-control">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" class="form-control">
    </div>
    <div class="form-group">
        <label>Verify Password</label>
        <input type="password" name="passwordRepeat" class="form-control">
    </div>
    <div class="form-group">
        <p>
          <button class="btn btn-success">Register</button>
          <a href="/login" class="btn btn-primary">Go To Login</a>
        </p>
        <p>
          <a class="btn btn-primary" href="/auth/facebook">Register with Facebook</a>
        </p>
    </div>
</form>
