{{#if error}}
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
      {{error}}
    </div>
{{/if}}
<h1>Shipping Info</h1>
<h3>Please enter your shipping information</h3>
<form method="POST">
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" value="{{data.name}}" class="form-control">
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" name="address1" value="{{data.address1}}" class="form-control">
    </div>
    <div class="form-group">
        <label>Address Line 2 (optional)</label>
        <input type="text" name="address2" value="{{data.address2}}" class="form-control">
    </div>
    <div class="form-group">
        <label>City</label>
        <input type="text" name="city" value="{{data.city}}" class="form-control">
    </div>
    <div class="form-group">
        <label>State</label>
        <input type="text" name="state" value="{{data.state}}" class="form-control">
    </div>
    <div class="form-group">
        <label>ZIP</label>
        <input type="text" name="zip" value="{{data.zip}}" class="form-control">
    </div>
    <div class="form-group">
        <button class="btn btn-success">Submit</button>
    </div>
</form>
