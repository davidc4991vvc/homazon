<h1>Shopping cart</h1>
<h3>Your cart contains {{count}} items:</h3>
<table class="table">
    <tr>
        <td><b>Product</b></td>
        <td><b>Price</b></td>
        <td colspan="2"><b>Quantity</b></td>
    </tr>
{{#each cart}}
    <tr>
        <td><a href="/product/{{subproduct.parent._id}}">{{subproduct.parent.title}} - {{subproduct.title}}</a></td>
        <td>{{subproduct.displayPrice}}</td>
        <td>{{quantity}}</td>
        <td><a href="/cart/delete/{{subproduct._id}}" class="btn btn-danger">Remove</a></td>
    </tr>
{{/each}}
</table>
<h3>Total: {{total}}</h3>
{{#if count}}
  <p>
      <a href="/checkout" class="btn btn-primary">Checkout</a>
      <a href="/cart/delete" class="btn btn-danger">Empty Cart</a>
  </p>
{{/if}}
<p>
    <a href="/" class="btn btn-default">Back</a>
</p>
